<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.githubusersubmission">

    <uses-permission android:name="android.permission.INTERNET" />
    <permission
        android:name="com.example.githubusersubmission.READ_DATABASE"
        android:protectionLevel="normal"/>
    <permission android:name="com.example.githubusersubmission.WRITE_DATABASE"
        android:protectionLevel="normal"/>
        

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUserSubmission">
        <activity android:name=".UserFavorite"/>
        <activity android:name=".NotificationSettings" />
        <activity android:name=".DetailActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".alarm.AlarmReceiver" android:enabled="true" android:permission="TODO"/>
        <provider
            android:authorities="com.example.githubusersubmission"
            android:name=".provider.FavoriteProvider"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.example.githubusersubmission.READ_DATABASE"
            android:writePermission="com.example.githubusersubmission.WRITE_DATABASE"/>
    </application>

</manifest>